<%= form_for [@topic, @post], html: {role: "form"} do |f| %>
	<div class="form-group">
		<% if @post.new_record? %><%= f.label :content, "Your Reply" %><% end %>
		<%= f.text_area :content, required: true, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit @post.new_record? ? "Create" : "Update", class: "btn btn-success" %>
	</div>
<% end %>