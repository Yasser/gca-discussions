<h3>Start a New Topic</h3>

<%= form_for @topic, html: {role: "form"} do |f| %>
	<div class="row">
		<div class="col-md-10">
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, required: true, class: "form-control" %>
			</div>
		
			<div class="form-group">
				<%= f.fields_for :posts do |p| %>
					<%= f.label :content %>
					<%= p.text_area :content,  required: true, class: "form-control" %>
					<%= p.hidden_field :user_id %>
				<% end %>
			</div>
		
			<div class="form-group">
				<%= f.submit "Create", class: "btn btn-success" %>
			</div>
		</div>
	</div>
<% end %>